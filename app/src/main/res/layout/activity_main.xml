<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dim_gray"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/misc_cghs_nl_creation"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="@string/misc_cghs_nl_creation"
        android:textColor="@color/dark_green"
        app:layout_constraintBottom_toTopOf="@+id/txt_terms_of_use"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_terms_of_use"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/txt_terms_of_use"
        app:layout_constraintBottom_toTopOf="@+id/btn_accept"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/misc_cghs_nl_creation" />

    <Button
        android:id="@+id/btn_accept"
        android:layout_width="159dp"
        android:layout_height="98dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="61dp"
        android:gravity="center"
        android:text="@string/btn_accept"
        app:layout_constraintEnd_toStartOf="@+id/btn_decline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_terms_of_use" />

    <Button
        android:id="@+id/btn_decline"
        android:layout_width="159dp"
        android:layout_height="98dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:text="@string/btn_decline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_accept"
        app:layout_constraintTop_toBottomOf="@+id/txt_terms_of_use"
        app:layout_constraintVertical_bias="0.45" />


</androidx.constraintlayout.widget.ConstraintLayout>